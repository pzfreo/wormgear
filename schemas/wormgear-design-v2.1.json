{
  "$defs": {
    "AntiRotation": {
      "description": "Anti-rotation feature type for bores.\n\nDefines shaft locking features per DIN 6885 and other standards.\nUsed in conjunction with BoreType.CUSTOM to specify how the\nbore prevents rotation on the shaft.",
      "enum": [
        "none",
        "DIN6885",
        "ddcut"
      ],
      "title": "AntiRotation",
      "type": "string"
    },
    "AssemblyParams": {
      "description": "Assembly parameters from calculator.",
      "properties": {
        "centre_distance_mm": {
          "title": "Centre Distance Mm",
          "type": "number"
        },
        "pressure_angle_deg": {
          "title": "Pressure Angle Deg",
          "type": "number"
        },
        "backlash_mm": {
          "title": "Backlash Mm",
          "type": "number"
        },
        "hand": {
          "$ref": "#/$defs/Hand"
        },
        "ratio": {
          "title": "Ratio",
          "type": "integer"
        },
        "efficiency_percent": {
          "anyOf": [
            {
              "type": "number"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Efficiency Percent"
        },
        "self_locking": {
          "anyOf": [
            {
              "type": "boolean"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Self Locking"
        }
      },
      "required": [
        "centre_distance_mm",
        "pressure_angle_deg",
        "backlash_mm",
        "hand",
        "ratio"
      ],
      "title": "AssemblyParams",
      "type": "object"
    },
    "BoreType": {
      "description": "Bore configuration type",
      "enum": [
        "none",
        "custom"
      ],
      "title": "BoreType",
      "type": "string"
    },
    "Features": {
      "description": "Manufacturing features for worm and wheel.",
      "properties": {
        "worm": {
          "anyOf": [
            {
              "$ref": "#/$defs/WormFeatures"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        },
        "wheel": {
          "anyOf": [
            {
              "$ref": "#/$defs/WheelFeatures"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        }
      },
      "title": "Features",
      "type": "object"
    },
    "Hand": {
      "description": "Thread hand / helix direction",
      "enum": [
        "right",
        "left"
      ],
      "title": "Hand",
      "type": "string"
    },
    "HubSpec": {
      "description": "Hub specification (wheel only).",
      "properties": {
        "type": {
          "default": "flush",
          "title": "Type",
          "type": "string"
        },
        "length_mm": {
          "anyOf": [
            {
              "type": "number"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Length Mm"
        },
        "flange_diameter_mm": {
          "anyOf": [
            {
              "type": "number"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Flange Diameter Mm"
        },
        "flange_thickness_mm": {
          "anyOf": [
            {
              "type": "number"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Flange Thickness Mm"
        },
        "bolt_holes": {
          "anyOf": [
            {
              "type": "integer"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Bolt Holes"
        },
        "bolt_diameter_mm": {
          "anyOf": [
            {
              "type": "number"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Bolt Diameter Mm"
        }
      },
      "title": "HubSpec",
      "type": "object"
    },
    "ManufacturingParams": {
      "description": "Manufacturing/generation parameters.\n\nNote: worm_features and wheel_features are NOT stored here.\nUse WormGearDesign.features instead. Old schemas with features\nin manufacturing are migrated by upgrade_schema() in schema.py.",
      "properties": {
        "profile": {
          "$ref": "#/$defs/WormProfile",
          "default": "ZA"
        },
        "worm_type": {
          "anyOf": [
            {
              "$ref": "#/$defs/WormType"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        },
        "virtual_hobbing": {
          "default": false,
          "title": "Virtual Hobbing",
          "type": "boolean"
        },
        "hobbing_steps": {
          "default": 18,
          "title": "Hobbing Steps",
          "type": "integer"
        },
        "throated_wheel": {
          "default": false,
          "title": "Throated Wheel",
          "type": "boolean"
        },
        "sections_per_turn": {
          "default": 36,
          "title": "Sections Per Turn",
          "type": "integer"
        },
        "worm_length_mm": {
          "anyOf": [
            {
              "type": "number"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Worm Length Mm"
        },
        "wheel_width_mm": {
          "anyOf": [
            {
              "type": "number"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Wheel Width Mm"
        }
      },
      "title": "ManufacturingParams",
      "type": "object"
    },
    "MeasuredGeometry": {
      "description": "Post-build geometry measurements from actual 3D solids.\n\nThese values are measured from the built geometry after all features\n(bore, keyway, DD-cut, hobbing) have been applied. They may differ\nfrom theoretical calculations, especially for virtual-hobbed wheels.",
      "properties": {
        "wheel_rim_thickness_mm": {
          "anyOf": [
            {
              "minimum": 0,
              "type": "number"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Minimum rim thickness from wheel bore surface to tooth root (mm)",
          "title": "Wheel Rim Thickness Mm"
        },
        "wheel_measurement_point": {
          "anyOf": [
            {
              "$ref": "#/$defs/MeasurementPoint"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Location on bore surface where minimum rim was measured"
        },
        "wheel_rim_warning": {
          "anyOf": [
            {
              "type": "boolean"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "True if wheel rim thickness is below recommended minimum",
          "title": "Wheel Rim Warning"
        },
        "worm_rim_thickness_mm": {
          "anyOf": [
            {
              "minimum": 0,
              "type": "number"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Minimum rim thickness from worm bore surface to thread root (mm)",
          "title": "Worm Rim Thickness Mm"
        },
        "worm_measurement_point": {
          "anyOf": [
            {
              "$ref": "#/$defs/MeasurementPoint"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Location on bore surface where minimum rim was measured"
        },
        "worm_rim_warning": {
          "anyOf": [
            {
              "type": "boolean"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "True if worm rim thickness is below recommended minimum",
          "title": "Worm Rim Warning"
        },
        "measurement_timestamp": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "ISO 8601 timestamp when measurements were taken",
          "title": "Measurement Timestamp"
        }
      },
      "title": "MeasuredGeometry",
      "type": "object"
    },
    "MeasurementPoint": {
      "description": "3D point where measurement was taken.",
      "properties": {
        "x_mm": {
          "description": "X coordinate in mm",
          "title": "X Mm",
          "type": "number"
        },
        "y_mm": {
          "description": "Y coordinate in mm",
          "title": "Y Mm",
          "type": "number"
        },
        "z_mm": {
          "description": "Z coordinate in mm",
          "title": "Z Mm",
          "type": "number"
        }
      },
      "required": [
        "x_mm",
        "y_mm",
        "z_mm"
      ],
      "title": "MeasurementPoint",
      "type": "object"
    },
    "SetScrewSpec": {
      "description": "Set screw specification.",
      "properties": {
        "size": {
          "title": "Size",
          "type": "string"
        },
        "count": {
          "default": 1,
          "title": "Count",
          "type": "integer"
        }
      },
      "required": [
        "size"
      ],
      "title": "SetScrewSpec",
      "type": "object"
    },
    "WheelFeatures": {
      "description": "Manufacturing features for wheel.\n\nbore_type is REQUIRED and must be explicitly specified:\n- \"none\": Solid part, no bore (bore_diameter_mm ignored)\n- \"custom\": Bore with specified diameter (bore_diameter_mm required)\n\nanti_rotation specifies shaft locking feature:\n- \"none\": Smooth bore (no anti-rotation)\n- \"DIN6885\": Standard keyway per DIN 6885\n- \"ddcut\": DD-cut (double-D flat) for small shafts",
      "properties": {
        "bore_type": {
          "$ref": "#/$defs/BoreType",
          "description": "Bore type: 'none' for solid, 'custom' for specified diameter"
        },
        "bore_diameter_mm": {
          "anyOf": [
            {
              "exclusiveMinimum": 0,
              "type": "number"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Bore diameter in mm. Required when bore_type is 'custom'.",
          "title": "Bore Diameter Mm"
        },
        "anti_rotation": {
          "$ref": "#/$defs/AntiRotation",
          "default": "none",
          "description": "Anti-rotation feature: 'none', 'DIN6885' (keyway), or 'ddcut'"
        },
        "ddcut_depth_percent": {
          "default": 15.0,
          "description": "DD-cut depth as percentage of bore diameter. Only used when anti_rotation is 'ddcut'.",
          "maximum": 40.0,
          "minimum": 5.0,
          "title": "Ddcut Depth Percent",
          "type": "number"
        },
        "set_screw": {
          "anyOf": [
            {
              "$ref": "#/$defs/SetScrewSpec"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        },
        "hub": {
          "anyOf": [
            {
              "$ref": "#/$defs/HubSpec"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        }
      },
      "required": [
        "bore_type"
      ],
      "title": "WheelFeatures",
      "type": "object"
    },
    "WheelParams": {
      "description": "Wheel dimensional parameters from calculator.",
      "properties": {
        "module_mm": {
          "title": "Module Mm",
          "type": "number"
        },
        "num_teeth": {
          "title": "Num Teeth",
          "type": "integer"
        },
        "pitch_diameter_mm": {
          "title": "Pitch Diameter Mm",
          "type": "number"
        },
        "tip_diameter_mm": {
          "title": "Tip Diameter Mm",
          "type": "number"
        },
        "root_diameter_mm": {
          "title": "Root Diameter Mm",
          "type": "number"
        },
        "addendum_mm": {
          "title": "Addendum Mm",
          "type": "number"
        },
        "dedendum_mm": {
          "title": "Dedendum Mm",
          "type": "number"
        },
        "profile_shift": {
          "default": 0.0,
          "title": "Profile Shift",
          "type": "number"
        },
        "throat_diameter_mm": {
          "anyOf": [
            {
              "type": "number"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Throat Diameter Mm"
        },
        "helix_angle_deg": {
          "anyOf": [
            {
              "type": "number"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Helix Angle Deg"
        },
        "width_mm": {
          "anyOf": [
            {
              "type": "number"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Width Mm"
        }
      },
      "required": [
        "module_mm",
        "num_teeth",
        "pitch_diameter_mm",
        "tip_diameter_mm",
        "root_diameter_mm",
        "addendum_mm",
        "dedendum_mm"
      ],
      "title": "WheelParams",
      "type": "object"
    },
    "WormFeatures": {
      "description": "Manufacturing features for worm.\n\nbore_type is REQUIRED and must be explicitly specified:\n- \"none\": Solid part, no bore (bore_diameter_mm ignored)\n- \"custom\": Bore with specified diameter (bore_diameter_mm required)\n\nanti_rotation specifies shaft locking feature:\n- \"none\": Smooth bore (no anti-rotation)\n- \"DIN6885\": Standard keyway per DIN 6885\n- \"ddcut\": DD-cut (double-D flat) for small shafts",
      "properties": {
        "bore_type": {
          "$ref": "#/$defs/BoreType",
          "description": "Bore type: 'none' for solid, 'custom' for specified diameter"
        },
        "bore_diameter_mm": {
          "anyOf": [
            {
              "exclusiveMinimum": 0,
              "type": "number"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Bore diameter in mm. Required when bore_type is 'custom'.",
          "title": "Bore Diameter Mm"
        },
        "anti_rotation": {
          "$ref": "#/$defs/AntiRotation",
          "default": "none",
          "description": "Anti-rotation feature: 'none', 'DIN6885' (keyway), or 'ddcut'"
        },
        "ddcut_depth_percent": {
          "default": 15.0,
          "description": "DD-cut depth as percentage of bore diameter. Only used when anti_rotation is 'ddcut'.",
          "maximum": 40.0,
          "minimum": 5.0,
          "title": "Ddcut Depth Percent",
          "type": "number"
        },
        "set_screw": {
          "anyOf": [
            {
              "$ref": "#/$defs/SetScrewSpec"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        }
      },
      "required": [
        "bore_type"
      ],
      "title": "WormFeatures",
      "type": "object"
    },
    "WormParams": {
      "description": "Worm dimensional parameters from calculator.",
      "properties": {
        "module_mm": {
          "title": "Module Mm",
          "type": "number"
        },
        "num_starts": {
          "title": "Num Starts",
          "type": "integer"
        },
        "pitch_diameter_mm": {
          "title": "Pitch Diameter Mm",
          "type": "number"
        },
        "tip_diameter_mm": {
          "title": "Tip Diameter Mm",
          "type": "number"
        },
        "root_diameter_mm": {
          "title": "Root Diameter Mm",
          "type": "number"
        },
        "lead_mm": {
          "title": "Lead Mm",
          "type": "number"
        },
        "axial_pitch_mm": {
          "anyOf": [
            {
              "type": "number"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Axial Pitch Mm"
        },
        "lead_angle_deg": {
          "title": "Lead Angle Deg",
          "type": "number"
        },
        "addendum_mm": {
          "title": "Addendum Mm",
          "type": "number"
        },
        "dedendum_mm": {
          "title": "Dedendum Mm",
          "type": "number"
        },
        "thread_thickness_mm": {
          "title": "Thread Thickness Mm",
          "type": "number"
        },
        "hand": {
          "$ref": "#/$defs/Hand"
        },
        "profile_shift": {
          "default": 0.0,
          "title": "Profile Shift",
          "type": "number"
        },
        "type": {
          "anyOf": [
            {
              "$ref": "#/$defs/WormType"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        },
        "throat_reduction_mm": {
          "anyOf": [
            {
              "type": "number"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Throat Reduction Mm"
        },
        "throat_curvature_radius_mm": {
          "anyOf": [
            {
              "type": "number"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Throat Curvature Radius Mm"
        },
        "length_mm": {
          "anyOf": [
            {
              "type": "number"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Length Mm"
        }
      },
      "required": [
        "module_mm",
        "num_starts",
        "pitch_diameter_mm",
        "tip_diameter_mm",
        "root_diameter_mm",
        "lead_mm",
        "lead_angle_deg",
        "addendum_mm",
        "dedendum_mm",
        "thread_thickness_mm",
        "hand"
      ],
      "title": "WormParams",
      "type": "object"
    },
    "WormProfile": {
      "description": "Worm tooth profile type per DIN 3975",
      "enum": [
        "ZA",
        "ZK",
        "ZI"
      ],
      "title": "WormProfile",
      "type": "string"
    },
    "WormType": {
      "description": "Worm geometry type",
      "enum": [
        "cylindrical",
        "globoid"
      ],
      "title": "WormType",
      "type": "string"
    }
  },
  "description": "Complete worm gear design output from calculator",
  "properties": {
    "worm": {
      "$ref": "#/$defs/WormParams"
    },
    "wheel": {
      "$ref": "#/$defs/WheelParams"
    },
    "assembly": {
      "$ref": "#/$defs/AssemblyParams"
    },
    "features": {
      "anyOf": [
        {
          "$ref": "#/$defs/Features"
        },
        {
          "type": "null"
        }
      ],
      "default": null
    },
    "manufacturing": {
      "anyOf": [
        {
          "$ref": "#/$defs/ManufacturingParams"
        },
        {
          "type": "null"
        }
      ],
      "default": null
    },
    "measured_geometry": {
      "anyOf": [
        {
          "$ref": "#/$defs/MeasuredGeometry"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Post-build measurements from actual 3D geometry"
    }
  },
  "required": [
    "worm",
    "wheel",
    "assembly"
  ],
  "title": "WormGearDesign",
  "type": "object",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wormgear.studio/schemas/wormgear-design-v2.1.json"
}